<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PatFutbol - Bundesliga</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <!-- Navbar -->
    <%- include("partials/navbar", { userid: userid }) %>

        <!-- Header -->
        <header class="bg-dark py-5"
            style="background-image: url('/pics/Home/bundelisgabackgr.jpg'); background-size: cover; height: 300px;">
            <div class="container text-center text-white">
                <h1 class="display-4 fw-bolder">Shop Bundesliga</h1>
            </div>
        </header>

        <!-- Products -->
        <section class="py-5">
            <div class="container">
                <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 g-4 justify-content-center">
                    <% products.forEach(product=> { %>
                        <div class="col">
                            <div class="card h-100" data-league="<%= product.league %>"
                                data-image="<%= product.image %>">
                                <img src="/pics/<%= product.league %>/<%= product.image %>" class="card-img-top"
                                    alt="<%= product.name %>">
                                <div class="card-body text-center d-flex flex-column">

                                    <!-- Product name (equal height) -->
                                    <h5 class="fw-bolder product-name mb-2" style="min-height: 48px;">
                                        <%= product.name %>
                                    </h5>

                                    <!-- Rating (equal height) -->
                                    <div class="rating-row d-flex justify-content-center mb-2"
                                        style="min-height: 24px;">
                                        <% for (let i=0; i < 5; i++) { %>
                                            <i
                                                class="<%= i < product.rating ? 'bi-star-fill' : 'bi-star' %> text-warning"></i>
                                            <% } %>
                                    </div>

                                    <!-- Price (always pushed to bottom) -->
                                    <span class="product-price mt-auto">$<%= product.price %></span>

                                </div>


                                <div class="card-footer text-center bg-white border-top-0">
                                    <button class="btn btn-outline-dark add-to-cart mt-auto">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="py-5 bg-dark text-center text-white">
            &copy; Patrick Agboka 2025
        </footer>

        <!-- Cart JS -->
        <script src="/cart.js"></script>
</body>

</html>