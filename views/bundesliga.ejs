<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="author" content="Patrick Agboka">
    <meta name="Bundesliga Page" content="Bundesliga store section, named 'bundesliga.ejs'">
    <title>PatFutbol! - Bundesliga</title>

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon rounded-circle mb-4" href="/pics/Home/realicon.jpg" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS-->
    <link href="/css/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#!">Bundesliga</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav d-flex justify-content-evenly mx-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="index.ejs">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="laliga.ejs">La Liga</a></li>
                    <li class="nav-item"><a class="nav-link" href="prem.ejs">Premier League</a></li>
                    <li class="nav-item"><a class="nav-link" href="seriea.ejs">Serie A</a></li>
                    <li class="nav-item"><a class="nav-link active" href="bundesliga.ejs">Bundesliga</a></li>
                    <li class="nav-item"><a class="nav-link" href="about.ejs">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="contact.ejs">Contact</a></li>
                </ul>

                <!-- Cart dropdown -->
                <form class="d-flex position-relative">
                    <button class="btn btn-outline-light" type="button" id="cartButton">
                        <i class="bi-cart-fill me-1"></i> Cart
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>

                    <div id="cartDropdown" class="cart-dropdown shadow bg-white p-3"
                        style="display: none; position: absolute; right: 0; top: 100%; width: 250px; z-index: 1000; border-radius: 8px;">
                        <h6 class="text-center">Cart Items</h6>
                        <ul id="cartItemsList" class="list-unstyled"></ul>
                        <div class="text-center mt-2">
                            <button id="clearCartButton" class="btn btn-sm btn-danger">Clear Cart</button>
                            <a href="cart.ejs" class="btn btn-sm btn-dark">View Cart</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="bg-dark py-5" style="background-image: url('pics/Home/bundelisgabackgr.jpg'); 
               background-size: cover; background-position: top center; height: 300px;">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Shop Bundesliga</h1>
            </div>
        </div>
    </header>

    <!-- Products Section -->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">

            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                <% products.forEach(product=> { %>
                    <div class="col mb-5">
                        <div class="card h-100">
                        <img src="/pics/Bundesliga/<%= product.image %>" alt="<%= product.name %>">
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">
                                        <%= product.name %>
                                    </h5>
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <% for(let i=0; i<5; i++){ %>
                                            <div class="<%= i < product.rating ? 'bi-star-fill' : 'bi-star' %>"></div>
                                            <% } %>
                                    </div>
                                    <span>$<%= product.price %></span><br>
                                    <span class="text-muted product-id">
                                        <%= product.id %>
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-white text-center">
                                <button class="btn btn-outline-dark mt-auto"
                                    onclick="addToCart('user1', '<%= product.id %>', 1, '<%= product.price %>')">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }) %>


            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">&copy; Patrick Agboka's Website 2025</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Cart JS -->
    <script src="js/cart.js"></script>
</body>

</html>