                <a class="navbar-brand" href="#!">PatFutbol!</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav d-flex justify-content-evenly mx-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="index.ejs">Home</a></li>
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="laliga.ejs">La Liga</a></li>
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="prem.ejs">Premier League</a></li>
